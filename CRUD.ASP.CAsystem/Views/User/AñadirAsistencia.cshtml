@model Asistente

@{
    ViewData["Title"] = "Añadir Asistencia";
    int idTabla = ViewBag.IdTabla;
    string nombreTabla = ViewBag.NombreTabla;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/StylesAñadirAsistencia.css" asp-append-version="true" />
    <link rel="icon" href="~/favicon.ico" asp-append-version="true" />
    <title>Nueva Asistencia</title>
</head>
<body>
    <div class="container">
        <div class="left-section">
            <h1>Add a new Asistent</h1>
            <p>
				Remember Ckeck the box if the asistent is going to assist to the event.
				Remember ckeck the data before save.
            </p>
            <p>CAsystem</p>
        </div>

        <div class="right-section">
            <h1>New Asistent</h1>
            <p>Complete full imput for save data.</p>

            <form asp-action="AñadirAsistencia" method="post">
                <input type="hidden" asp-for="IdAsistente" />
                <input type="hidden" name="idTabla" value="@idTabla" />
                <input type="hidden" name="nombreTabla" value="@nombreTabla" />
                <div class="form-group">
                    <label asp-for="Nombre_Asistencia" class="control-label"></label>
                    <input asp-for="Nombre_Asistencia" class="form-control" />
                    <span asp-validation-for="Nombre_Asistencia" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Departamento" class="control-label"></label>
                    <input asp-for="Departamento" class="form-control" />
                    <span asp-validation-for="Departamento" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Asistencia" class="control-label"></label>
                    <input asp-for="Asistencia" class="form-control" type="checkbox" id="checkbox_asistent" />
                    <span asp-validation-for="Asistencia" class="text-danger"></span>
                </div>
                <button type="submit" class="btn-primary">Save</button>

                <div class="text-center">
                    <a asp-action="InterfaceIndexUser">Return</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>


